# Build stage
FROM node:20 AS build

WORKDIR /app

# Copy package files
COPY package*.json ./


# Install dependencies
RUN npm ci

# Copy source code
COPY . .


ARG VITE_BASE_API_URL
ARG VITE_WS_URL
ARG VITE_SPOTIFY_CLIENT_ID
ARG VITE_SPOTIFY_CLIENT_SECRET
ARG VITE_SPOTIFY_REDIRECT_URI
ARG VITE_WS_URL
ARG VITE_SHOW_ID
ARG VITE_PODCAST_SOURCE
ARG VITE_WHATSAPP_LINK
ARG VITE_INSTAGRAM_LINK
ARG VITE_CLUBHOUSE_LINK
ARG VITE_CPN_PODCAST

ENV VITE_BASE_API_URL=$VITE_BASE_API_URL
ENV VITE_WS_URL=$VITE_WS_URL
ENV VITE_SPOTIFY_CLIENT_ID=$VITE_SPOTIFY_CLIENT_ID
ENV VITE_SPOTIFY_CLIENT_SECRET=$VITE_SPOTIFY_CLIENT_SECRET
ENV VITE_SPOTIFY_REDIRECT_URI=$VITE_SPOTIFY_REDIRECT_URI
ENV VITE_WS_URL=$VITE_WS_URL
ENV VITE_SHOW_ID=$VITE_SHOW_ID
ENV VITE_PODCAST_SOURCE=$VITE_PODCAST_SOURCE
ENV VITE_WHATSAPP_LINK=$VITE_WHATSAPP_LINK
ENV VITE_INSTAGRAM_LINK=$VITE_INSTAGRAM_LINK
ENV VITE_CLUBHOUSE_LINK=$VITE_CLUBHOUSE_LINK
ENV VITE_CPN_PODCAST=$VITE_CPN_PODCAST




# Build the application
RUN npm run build

# Production stage
FROM nginx:alpine

# Copy built files from build stage
COPY --from=build /app/dist /usr/share/nginx/html

# Copy nginx configuration
COPY nginx.conf /etc/nginx/nginx.conf

# Expose port
EXPOSE 80

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:80/ || exit 1

# Start nginx
CMD ["nginx", "-g", "daemon off;"] 